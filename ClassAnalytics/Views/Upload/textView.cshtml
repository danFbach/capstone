@model ClassAnalytics.Models.Uploads_Models.UploadModel
@{
    ViewBag.Title = "Viewing " + Model.uploadName;
    string downlink = "http://localhost:5753/" + Model.relativePath;
    string newFile = Server.MapPath(Model.relativePath);
    var userdata = File.ReadAllLines(newFile);
}

<center><h2>@ViewBag.Title</h2></center>
<h5 style="text-align:right;margin-top:-30px;">@Html.ActionLink("Return to Dashboard", "Index", "Class")</h5>
<h5 style="text-align:left;margin-top:-30px;"><a href="@downlink"  download>Download @Model.uploadName</a></h5>


<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <pre style="background-color:#FFF;background-color:rgba(255,255,255,.75);height:500px;overflow:auto;">
            @foreach(string line in userdata)
            {
                string thisLine = line;
                if (thisLine == "")
                {
                    thisLine = "\t";
                }
                thisLine += "\n";
                @Html.DisplayFor(item => thisLine);
                    
            }
        </pre>
    </div>
    <div class="col-md-1"></div>
</div>