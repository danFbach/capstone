@model IEnumerable < ClassAnalytics.Models.ClassStudentViewModel>

@{
    ViewBag.Title = "Index";
}
@using (Html.BeginForm())
{
    <center><h2>Students</h2></center>
    <div class="row" style="width:100%;margin-left:10px;margin-top:-45px;padding-bottom:5px;">
        <div class="col-xs-10" style="width:250px;margin-left:-25px;">
            @Html.DropDownList("class_id", null, "Select a Class", htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="col-xs-8" style="width:auto;margin-left:-10px;padding-left:0px;">
            <input type="submit" value="Search" class="btn btn-primary-2" />
        </div>
    </div>
}

<p style="text-align:right;margin-top:-25px;">
    @Html.ActionLink("Add New Student", "Create") |
    @Html.ActionLink("Add New Class", "Create", "Class")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.fName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClassModel)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClassModel.className)
        </td>
        <td>
            @Html.ActionLink("Modify Student", "Edit", new { id=item.student_Id }) |
            @Html.ActionLink("Remove Student", "Delete", new { id=item.student_Id})
        </td>
    </tr>
}

</table>

@using (Html.BeginForm("ClassHome", "Class"))
{
    @Html.AntiForgeryToken()
    <center>
        <div class="col-md-12">
            <div class="form-group">
                <input type="submit" value="Return To Class Home" class="btn btn-default" />
            </div>
        </div>
    </center>
}