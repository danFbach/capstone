@model IEnumerable<ClassAnalytics.Models.ProgClassViewModel>

@{
    ViewBag.Title = "Classes";
}

<center><h2>@ViewBag.Title</h2></center>
<div class="row" style="margin-top:-45px;">
    @using (Html.BeginForm())
    {
        <div class="col-xs-10" style="width:250px;margin-left:0px;padding-bottom:10px;">
            @Html.DropDownList("program_id", null, "Select a Program", htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="col-xs-8" style="width:150px;margin-left:-10px;padding-bottom:10px;padding-left:0px;">
            <input type="submit" value="Search" class="btn btn-primary-2" />
        </div>
    }
    <div class="col-sm-8" style="text-align:right;">
        <h5>@Html.ActionLink("Add a new Class", "Create")</h5>
        <h5 class="text-danger">@ViewBag.statusMesssage</h5>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.className)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProgramModels.programName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.className)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProgramModels.programName)
        </td>
        <td>
            <div class="btn-group" style="margin-top:-10px;margin-bottom:5px;">
                <button class="btn btn-default btn-sm" type="button" style="margin:0;color:#FFF;" data-hover="dropdown">Uploads</button>
                <div class="dropdown-menu">@Html.ActionLink("New Upload", "Upload", "Upload", new { id = item.class_Id }, new { @class = "navbar_links" })<br>@Html.ActionLink("View Uploads", "uploadList", "Upload", new { id = item.class_Id }, new { @class = "navbar_links" })</div>
            </div>
            <div class="btn-group" style="margin-top:-10px;margin-bottom:5px;">
                <button class="btn btn-default btn-sm" type="button" style="margin:0;color:#FFF;" data-hover="dropdown">Students</button>
                <div class="dropdown-menu">@Html.ActionLink("New Student","addStudent", new { id = item.class_Id }, new { @class = "navbar_links" })<br>@Html.ActionLink("View Students", "studentIndex", new { id = item.class_Id }, new { @class = "navbar_links" })</div>
            </div>
            <div class="btn-group" style="margin-top:-10px;margin-bottom:5px;">
                <button class="btn btn-default btn-sm" type="button" style="margin:0;color:#FFF;" data-hover="dropdown">Class Management</button>
                <div class="dropdown-menu">@Html.ActionLink("View Grades","classGrades", new { id = item.class_Id }, new { @class = "navbar_links" })<br>@Html.ActionLink("Update Class", "Edit", new { id = item.class_Id }, new { @class = "navbar_links" })<br>@Html.ActionLink("Remove Class", "Delete", new { id = item.class_Id }, new { @class = "navbar_links" })</div>
            </div>
        </td>
    </tr>
}

</table>