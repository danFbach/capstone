@model IEnumerable<ClassAnalytics.Models.ProgClassViewModel>

@{
    ViewBag.Title = "Index";
}

<center><h2>Classes</h2></center>
<div class="row" style="margin-top:-45px;">
    @using (Html.BeginForm())
    {
        <div class="col-xs-10" style="width:250px;margin-left:0px;padding-bottom:10px;">
            @Html.DropDownList("program_id", null, "Select a Program", htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="col-xs-8" style="width:150px;margin-left:-10px;padding-bottom:10px;padding-left:0px;">
            <input type="submit" value="Search" class="btn btn-primary-2" />
        </div>
    }
    <div class="col-sm-8" style="text-align:right;">
        <h5>@Html.ActionLink("Add a new Class", "Create")</h5>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.className)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProgramModels.programName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.className)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProgramModels.programName)
        </td>
        <td>
            @Html.ActionLink("Upload","Upload", new { id=item.class_Id}) | 
            @Html.ActionLink("New Student","addStudent", new { id=item.class_Id }) | 
            @Html.ActionLink("View Students", "studentIndex", new { id=item.class_Id}) | 
            @Html.ActionLink("View Grades","classGrades", new { id=item.class_Id }) | 
            @Html.ActionLink("Update Class", "Edit", new { id=item.class_Id }) |
            @Html.ActionLink("Remove Class", "Delete", new { id=item.class_Id })
        </td>
    </tr>
}

</table>