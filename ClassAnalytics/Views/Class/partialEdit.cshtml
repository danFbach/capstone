            var earned = getElementById(@id+"earned").val();
            var notes = getElementById(@id+"notes").val();
            $("#@id").load("partialEdit?grade_id=" + Model.grade_Id + "&earned=" + earned + "&notes=" + notes,"Class",null, Request.Url.Scheme);
        });*@
    });
</script>