<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Edulytics - Admin", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <div class="btn-group" id="button_fade">
                        <button class="btn btn-default btn-sm" type="button" data-hover="dropdown" style="background-color: transparent;color: #FFF;border-color:transparent;padding-top:15px">Program Management</button>
                        <div class="dropdown-menu">@Html.ActionLink("Programs", "Index", "ProgramModels", new { area = "" }, new { @class = "navbar_links" })<br>@Html.ActionLink("Courses", "Index", "Course", new { area = "" }, new { @class = "navbar_links" })<br>@Html.ActionLink("Units", "Index", "Unit", new { area = "" }, new { @class = "navbar_links" })</div>
                    </div>
                    <div class="btn-group" id="button_fade">
                        <button class="btn btn-default btn-sm" type="button" data-hover="dropdown" style="background-color: transparent;color: #FFF;border-color:transparent;padding-top:15px">Task Management</button>
                        <div class="dropdown-menu">@Html.ActionLink("Tasks", "Index", "Task", new { area = "" }, new { @class = "navbar_links" })<br>@Html.ActionLink("Task Types", "Index", "TaskType", new { area = "" }, new { @class = "navbar_links" })</div>
                    </div>
                    <div class="btn-group" id="button_fade">
                        <button class="btn btn-default btn-sm" type="button" data-hover="dropdown" style="background-color: transparent;color: #FFF;border-color:transparent;padding-top:15px">Class Management</button>
                        <div class="dropdown-menu">@Html.ActionLink("Classes", "Index", "Class", new { area = "" }, new { @class = "navbar_links" })<br>@Html.ActionLink("Students", "Index", "Students", new { area = "" }, new { @class = "navbar_links" })</div>
                    </div>
                    <div class="btn-group" id="button_fade">
                        <button class="btn btn-default btn-sm" type="button" data-hover="dropdown" style="background-color: transparent;color: #FFF;border-color:transparent;padding-top:15px">Grade Management</button>
                        <div class="dropdown-menu">@Html.ActionLink("Gradebook", "Index", "GradeBook", new { area = "" }, new { @class = "navbar_links" })</div>
                    </div>
                    <div class="btn-group" id="button_fade">
                        <button class="btn btn-default btn-sm" type="button" data-hover="dropdown" style="background-color: transparent;color: #FFF;border-color:transparent;padding-top:15px">Survey Management</button>
                        <div class="dropdown-menu">@Html.ActionLink("Survey", "Index", "Survey", new { area = "" }, new { @class = "navbar_links" })</div>
                    </div>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Edulytics | @Html.ActionLink("About", "About", "Home") | @Html.ActionLink("Contact", "Contact", "Home")</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
