<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Edulytics Admin</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Edulytics - Admin", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <div class="nav navbar-nav">
                    <div class="btn-group" style="margin-top:10px;">
                        <button class="btn btn-default btn-sm" type="button" style="margin:0;color:#FFF;" data-hover="dropdown">Program Management</button>
                        <div class="dropdown-menu">@Html.ActionLink("Programs", "Index", "ProgramModels", new { area = "" }, new { @class = "navbar_links" })<br>@Html.ActionLink("Classes", "Index", "Class", new { area = "" }, new { @class = "navbar_links" })</div>
                    </div>
                    <div class="btn-group" style="margin-top:10px;">
                        <button class="btn btn-default btn-sm" type="button" style="margin:0;color:#FFF;" data-hover="dropdown">Messaging</button>
                        <div class="dropdown-menu">@Html.ActionLink("Direct Message", "Inbox", "Messaging", new { area = "" }, new { @class = "navbar_links" })<br>@Html.ActionLink("Email", "AdminMessaging", "Communication", new { area = "" }, new { @class = "navbar_links" })</div>
                    </div>
                </div>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr class="hr1" />
        <footer>
            <center><p>&copy; @DateTime.Now.Year - Edulytics | @Html.ActionLink("About", "About", "Home") | @Html.ActionLink("Contact", "Contact", "Home")</p></center>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
