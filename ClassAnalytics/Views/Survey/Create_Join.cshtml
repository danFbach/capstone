@model ClassAnalytics.Models.SurveyJoinTableModel

@{
    ViewBag.Title = "Create_Join";
}

<h2>Add Class to Survey</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.survey_Id)
        <div class="form-group">
            @Html.Label("Class", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("class_Id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.class_Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Survey", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayTextFor(model => model.SurveyModel.SurveyName)
                @Html.ValidationMessageFor(model => model.SurveyModel.survey_Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create Survey" class="btn btn-primary-new" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
