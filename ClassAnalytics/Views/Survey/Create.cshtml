@model ClassAnalytics.Models.Survey_Models.surveyCreateViewModel

@{
    ViewBag.Title = "New Survey";
}

<h3>@ViewBag.Title</h3>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.class_id)
        <div class="form-group">
            @Html.LabelFor(model => model.surveyModel.SurveyName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.surveyModel.SurveyName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.surveyModel.SurveyName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.surveyModel.course_Id, "Course", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.surveyModel.course_Id, Model.courseList, "Select a course: ", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.surveyModel.course_Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary-new" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Return to Surveys", "Index","Survey", new { id = ViewContext.RouteData.Values["id"] }, new { @class = "a" })
</div>
