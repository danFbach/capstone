@model IEnumerable<ClassAnalytics.Models.GradeBookModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm())
{
    <div class="row" style="width:100%;">
        <div class="col-xs-10" style="width:250px;">
            @Html.DropDownList("class_id", null, "Select a Class", htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="col-xs-10" style="width:250px;margin-left:-25px;">
            @Html.DropDownList("task_id", null, "Select a Task", htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="col-xs-8" style="width:150px;margin-left:-25px;">
            <input type="submit" value="Search" class="btn btn-default" />
        </div>
    </div>
}
<p>
    @Html.ActionLink("Create Class Task", "Create") | 
    @Html.ActionLink("Create Single Task", "CreateOne")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Name")
        </th>
        <th>
            @Html.DisplayName("Task")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TaskModel.points)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pointsEarned)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.grade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.assignment_notes)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        string unit = "Course: " + item.TaskModel.CourseModels.courseName + " | Type: " + item.TaskModel.taskName;
        string name = item.StudentModels.fName + " " + item.StudentModels.lName;
        string grade = "";
        if (item.pointsEarned != null)
        {
            grade = ((item.pointsEarned / item.TaskModel.points)* 100).ToString();
            grade += "%";
        }
        else
        {
            grade = item.grade.ToString();
        }
        <tr>
            <td>
                @Html.DisplayFor(modelItem => name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => unit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaskModel.points)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pointsEarned)
            </td>
            <td>
                @Html.DisplayFor(modelItem => grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.assignment_notes)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.grade_Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.grade_Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.grade_Id })
            </td>
        </tr>
    }

</table>
