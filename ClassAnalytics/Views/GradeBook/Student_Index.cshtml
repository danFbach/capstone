@model IEnumerable<ClassAnalytics.Models.GradeBookModel>

@{
    ViewBag.Title = this.User.Identity.Name + "'s Gradebook";
}

<h3>@ViewBag.Title</h3>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClassModel.className)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentModels.fName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TaskModel.taskName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.assignment_notes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TaskModel.points)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pointsEarned)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.grade)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    string name = item.StudentModels.fName + " " + item.StudentModels.lName;
    string grade = ((item.pointsEarned/item.TaskModel.points) * 100).ToString() + "%";
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ClassModel.className)
        </td>
        <td>
            @Html.DisplayFor(modelItem => name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TaskModel.taskName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.assignment_notes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TaskModel.points)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pointsEarned)
        </td>
        <td>
            @Html.DisplayFor(modelItem => grade)
        </td>
        <td>
            @Html.ActionLink("View Grade Details", "StudentDetails", new { id=item.grade_Id }) 
        </td>
    </tr>
}

</table>
