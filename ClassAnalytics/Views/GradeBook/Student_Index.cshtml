@model ClassAnalytics.Models.GradebookViewModel

@{
    ViewBag.Title = Model.studentName + "'s Gradebook";
}

<h3>@ViewBag.Title</h3>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Class")
        </th>
        <th>
            @Html.DisplayName("Task Name")
        </th>
        <th>
            @Html.DisplayName("Points Earned")
        </th>
        <th>
            @Html.DisplayName("Possible Points")
        </th>
        <th>
            @Html.DisplayName("Grade")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.grades) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ClassModel.className)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TaskModel.taskName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pointsEarned)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TaskModel.points)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.grade)%
        </td>
        <td>
            @Html.ActionLink("View Grade Details", "StudentDetails", new { id=item.grade_Id }) 
        </td>
    </tr>
}

</table>
