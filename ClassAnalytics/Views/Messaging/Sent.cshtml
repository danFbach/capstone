@model IEnumerable<ClassAnalytics.Models.MessagingModel>

@{
    ViewBag.Title = "Sent";
}

<h3>Sent</h3>


<div class="col-sm-2">
    <div class="btn-group" id="button_fade" style="padding-top:20px;">
        <input class="btn btn-primary-new btn-sm" value="Inbox" onclick="location.href='Inbox'" style="width:100px;" type="button" />
    </div>
    <div class="btn-group" id="button_fade">
        <input class="btn btn-primary-new btn-sm" value="Sent" onclick="location.href='Sent'" style="width:100px;" type="button" />
    </div>
    @Html.AntiForgeryToken()
    <div class="btn-group" id="button_fade" style="padding-bottom:20px;">
        <input class="btn btn-primary-new btn-sm" value="New Message" onclick="location.href='Create'" style="width:100px;" type="button" />
    </div>
</div>
<div class="col-sm-10">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Recipient")
            </th>
            <th>
                @Html.DisplayName("Subject: ")
            </th>
            <th>
                @Html.DisplayName("Read/Unread")
            </th>
            <th>
                @Html.DisplayName("Date: ")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                   To: @Html.DisplayFor(modelItem => item.receiving_User.Email)
                </td>
                <td>
                    @Html.ActionLink(item.subject, "Details", new { id = item.message_Id })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.read)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dateSent)
                </td>
                <td>
                    @Html.ActionLink("Remove", "Delete", new { id = item.message_Id })
                </td>
            </tr>
        }

    </table>
</div>