@model ClassAnalytics.Models.Instructor_Models.InstructorDetailViewModel

@{
    string name = Model.instructor.fName + " " + Model.instructor.lName;
    ViewBag.Title = name + "'s Details";
}

<h2>@ViewBag.Title</h2>
<h4>@Html.ActionLink("Add a Class", "addToClass", new { id=Model.instructor_id})</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Instructor")
        </dt>

        <dd>
            @Html.DisplayFor(model => name)
        </dd>

        <dt>
            @Html.DisplayName("Email")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.instructor.email)
        </dd>

        <dt>
            @Html.DisplayName("Programs")
        </dt>
        <dd>
            @foreach (var item in Model.classList)
            {
                string classname = item.className + " - " + item.ProgramModels.programName + " | ";
                @Html.DisplayFor(modelitem => classname) @Html.ActionLink("Remove", "removeFromClass",new { class_id=item.class_Id, instructor_id = Model.instructor_id})<br>
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Modify Instructor", "Edit", new { id = Model.instructor_id }) |
    @Html.ActionLink("Return to Instructor List", "Index")
</p>
